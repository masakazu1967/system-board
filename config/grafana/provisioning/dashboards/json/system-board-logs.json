{
  "dashboard": {
    "id": null,
    "uid": "system-board-logs",
    "title": "System Board - Logs & Error Tracking",
    "tags": ["system-board", "logs", "error-tracking"],
    "timezone": "Asia/Tokyo",
    "refresh": "5s",
    "schemaVersion": 39,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Log Volume by Level",
        "type": "stat",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "sum(rate({job=\"system-board\"} [5m])) by (level)",
            "legendFormat": "{{level}}"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list",
              "orientation": "auto"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate (5min)",
        "type": "stat",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "sum(rate({job=\"system-board\", level=\"error\"} [5m]))",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "unit": "reqps"
          }
        }
      },
      {
        "id": 3,
        "title": "Unique Error IDs (1h)",
        "type": "stat",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "count(count by (error_id)({job=\"system-board\", level=\"error\"} | json | error_id != \"\" [1h]))",
            "legendFormat": "Unique Errors"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Log Volume Over Time",
        "type": "graph",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "sum(rate({job=\"system-board\"} [5m])) by (level)",
            "legendFormat": "{{level}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 6},
        "yAxes": [
          {
            "label": "Logs/sec",
            "show": true
          }
        ],
        "legend": {
          "show": true,
          "values": false,
          "alignAsTable": true,
          "rightSide": false
        }
      },
      {
        "id": 5,
        "title": "Error Grouping by Error ID",
        "type": "piechart",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "topk(10, count by (error_id)({job=\"system-board\", level=\"error\"} | json | error_id != \"\" [1h]))",
            "legendFormat": "{{error_id}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "options": {
          "pieType": "pie",
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 6,
        "title": "Service Distribution",
        "type": "piechart",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "sum by (service)(rate({job=\"system-board\"} [5m]))",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14}
      },
      {
        "id": 7,
        "title": "Recent Error Logs",
        "type": "logs",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "{job=\"system-board\", level=\"error\"} | json",
            "maxLines": 100
          }
        ],
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 22},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 8,
        "title": "All Application Logs",
        "type": "logs",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "loki"
            },
            "expr": "{job=\"system-board\"} |= \"\"",
            "maxLines": 1000
          }
        ],
        "gridPos": {"h": 16, "w": 24, "x": 0, "y": 34},
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "sortOrder": "Descending"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "query": "label_values(service)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "refresh": 2
        },
        {
          "name": "level",
          "type": "query",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "query": "label_values(level)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "refresh": 2
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Error Events",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          },
          "enable": true,
          "expr": "{job=\"system-board\", level=\"error\"} | json",
          "iconColor": "red"
        }
      ]
    }
  }
}